{
  "name": "ts-koa-socket.io",
  "version": "1.0.0",
  "description": "Broadcasting with Socket.io on Koa written with TypeScript",
  "repository": "git@github.com:michaelpiper/ts-koa-socket.io.git",
  "main": "application/server.js",
  "type": "module",
  "scripts": {
    "typeorm": "typeorm",
    "lint": "eslint ./src",
    "dev": "yarn nodemon --exec \"yarn build && yarn serve\"  --ext ts",
    "build": "rm -rf ./application && tsc -p tsconfig.json",
    "serve": "node application/server.js",
    "serve:api": "node application/api.server.js",
    "serve:idp": "node application/idp.server.js",
    "serve:admin": "node application/admin.server.js",
    "start": "yarn serve",
    "test": "echo \"test\"",
    "nodemon": "nodemon",
    "pre-commit": "yarn lint --fix",
    "migration:run": "yarn build && yarn typeorm migration:run -d application/migrations/index.js",
    "migration:generate": "yarn build && yarn typeorm migration:generate -d application/migrations/index.js src/migrations/pipelines/migration",
    "start-prod": "NODE_ENV=production yarn start",
    "worker": "node ./application/worker.server.js",
    "worker:start": "npm run worker start"
  },
  "keywords": [
    "Socket",
    "Boilerplate",
    "koa",
    "ts",
    "KISS",
    "SOLID",
    "DRY"
  ],
  "author": "Michael Piper",
  "license": "ISC",
  "dependencies": {
    "@adminjs/koa": "^4.0.1",
    "@adminjs/passwords": "^4.0.0",
    "@adminjs/themes": "^1.0.0",
    "@adminjs/typeorm": "^5.0.0",
    "@koa/cors": "^4.0.0",
    "adminjs": "^7.0.0",
    "bull": "^4.10.4",
    "cache-manager": "^5.2.1",
    "cache-manager-redis": "^0.6.0",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "eslint": "^8.40.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^2.2.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^12.0.0",
    "koa-views": "^8.0.0",
    "lodash": "^4.17.21",
    "oidc-provider": "^8.2.1",
    "redis": "^3.0.2",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.6",
    "tslib": "^2.5.2",
    "typeorm": "^0.3.16",
    "validator": "^13.9.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/crypto-js": "^3.1.44",
    "@types/dotenv": "^8.2.0",
    "@types/flat": "^5.0.2",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/jwt-decode": "^2.2.1",
    "@types/koa__cors": "^4.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa-mount": "^4.0.2",
    "@types/koa-router": "^7.4.4",
    "@types/koa-session": "^6.4.1",
    "@types/lodash": "^4.14.195",
    "@types/morgan": "^1.9.4",
    "@types/oidc-provider": "^8.2.0",
    "@types/react-datepicker": "^4.11.2",
    "@types/react-dom": "^18.2.4",
    "@types/react-text-mask": "^5.4.11",
    "@types/redis": "^2.8.18",
    "@types/request": "^2.48.8",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-parser": "^3.0.0",
    "@types/styled-components": "^5.1.26",
    "@types/styled-system": "^5.1.16",
    "@types/tsscmp": "^1.0.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.22",
    "typescript": "^5.0.4"
  },
  "nodemonConfig": {
    "watch": "src/**/*.ts",
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 300
  }
}
